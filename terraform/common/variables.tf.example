variable "aws_account" {
  type = string
  description = "The AWS account ID"
  default = "123456789012"
}

variable "aws_region" {
  type    = string
  default = "eu-west-3"
}

variable "awscli_admin_profile" {
  type = string
  default = "admin"
}

variable "awscli_ec2_profile" {
  type = string
  default = "default"
}

variable "aws_demo_username" {
  type    = string
  default = "demo-user"
}

variable "aws_role_name" {
  type    = string
  default = "demo-role"
}

variable "aws_policy_name" {
  type    = string
  default = "demo-policy"
}

variable "aws_demo_attachment_name" {
  type    = string
  default = "demo-attachment"
}

variable "aws_instance_name" {
  type    = string
  default = "demo-instance"
}

variable "ami_mask" {
  type = string
  default = "demo-ami-*"
}

variable "ingress_ports" {
  type = list
  default = [22, 8001, 6543]
}

variable "cidrs_allowed" {
  type = list(string)
  description = "Allow these CIDRs only"
  default = ["1.2.3.4/32"]
}

variable "demo_key_pair" {
  type = string
  default = "ssh-rsa 0123456789ABCDEF user@computer"
}
