{% extends "layout.jinja2" %}

{% block title %}TODO details{% endblock %}

{% block style %}
form {
    display: table;
}

form div {
    display: table-row;
}

label, input {
    display: table-cell;
}
{% endblock %}

{% block content %}
<form method="POST">
    <dl>
        <dt><label for="id">ID</label></dt>
        <dd><input type="text" name="id" id="id" value="{{ id }}" disabled/></dd>

        <dt><label for="title">Title</label></dt>
        <dd><input type="text" name="title" id="title" value="{{ title }}"/></dd>

        <dt><label for="created_at">Created at</label></dt>
        <dd><input type="text" name="created_at" id="created_at" value="{{ created_at }}"/></dd>

        <dt><label for="done">Done</label></dt>
        <dd><input type="checkbox" name="done" id="done" {% if done %}checked{% endif %}/></dd>
    </dl>

    <p>
        <button type="submit" name="update" value="Update" class="btn btn-primary">
            <i class="bi bi-cloud-upload"></i> Update
        </button>

        <button type="submit" name="delete" value="Delete" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
    </p>
</form>

<p>
    <a href="{{ request.route_url('list') }}">Back</a>
</p>
{% endblock %}