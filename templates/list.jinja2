<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>TODO list</title>
    </head>
    <body>
        <h1>TODO list</h1>

        <ul>
            {% for todo in todos %}
            <li><a href="{{ request.route_url('details', id=todo.id) }}">{{ todo.title }}</a></li>
            {% endfor %}
        </ul>

        <p>
            <a href="{{ request.route_url('new') }}">New</a>
        </p>
    </body>
</html>